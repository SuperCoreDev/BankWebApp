<section class="section">
    <div class="row">

        <form name="TransferForm" id="transfer-form" method="post">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Transfer money</h5>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="floatingInput" placeholder="">
                        <label for="floatingInput">Beneficiary's name'</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="floatingInput" placeholder="">
                        <label for="floatingInput">Beneficiary's account number</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="floatingInput" placeholder="">
                        <label for="floatingInput">Address (optional)</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="floatingInput" placeholder="">
                        <label for="floatingInput">Title</label>
                    </div>
                    <div class="form-floating mb-3">
                        <select class="form-select" id="floatingSelect" aria-label="Floating label select example">
                            <option value="1" selected>US dolar</option>
                            <option value="2">Euro</option>
                            <option value="3">British pound</option>
                        </select>
                        <label for="floatingSelect">Select currency</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="floatingInput" placeholder="">
                        <label for="floatingInput">Amount</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="date" class="form-control" id="floatingInput" placeholder="">
                        <label for="floatingInput">Transfer date</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios" value="Standard" checked>
                        <label class="form-check-label" for="gridRadios1">Standard transfer</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios" value="Instant" >
                        <label class="form-check-label" for="gridRadios1">Instant transfer</label>
                    </div>
                    <button id="transfer-submit" type="submit" class="w-100 btn btn-lg btn-info">Send money</button>
                </div>
            </div> 
        </form>
        
    </div>
</section>