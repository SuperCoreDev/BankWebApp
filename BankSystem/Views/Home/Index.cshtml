@page
@using BankSystem.Data
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserMAnager
@model Client

@{
    
    var euros = ViewBag.Euros;
    var dollars = ViewBag.Dollars;
    var pounds = ViewBag.Pounds;

}

@if (SignInManager.IsSignedIn(User) && User.IsInRole("Client"))
{
    
    <section class="section dashboard">
      <div class="row">

        <div class="col-lg-8">
          <div class="row">

            <div class="col-12">
              <div class="card-account info-card euro-card">
                  
                <div class="card-body card-body-account">
                  

                  <div class="d-flex align-items-center">
                    
                    <div class="ps-3">
                      
                      <div class="account-buttons-horizontal">
                        <h5 class="card-title">Euro Funds</h5>

                         <ul class="list-group list-group-flush list-group-horizontal account-buttons">
                             <li>
                                 <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">€</div>
                             </li>
                             <li>
                                 <h6>
                                     €@euros
                                 </h6>
                             </li>
                             <li>
                                <a class="btn btn-success" asp-action="Withdrawal" asp-controller="EuroCurrency">Withdrawal</a>
                             </li>
                             <li>
                                <a class="btn btn-success" asp-action="Deposit" asp-controller="EuroCurrency">Add money</a>
                             </li>
                              <li>
                                <a class="btn btn-primary" asp-action="History" asp-controller="EuroCurrency">History</a>
                              </li>
                              <li>
                                <a class="btn btn-primary" asp-action="Transfer" asp-controller="EuroCurrency">Transfer</a>
                              </li>
                         </ul>
                      </div>
                    </div>
                  </div>
                  
                </div>

              </div>
            </div>
            <div class="col-12">
                <div class="card-account info-card dollar-card">

                    <div class="card-body card-body-account">


                        <div class="d-flex align-items-center">

                            <div class="ps-3">

                                <div class="account-buttons-horizontal">
                                    <h5 class="card-title">Dollar Funds</h5>

                                    <ul class="list-group list-group-flush list-group-horizontal account-buttons">
                                        <li>
                                            <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">$</div>
                                        </li>
                                        <li>
                                            <h6>
                                                $@dollars
                                            </h6>
                                        </li>
                                        <li>
                                            <a class="btn btn-success" asp-action="Withdrawal" asp-controller="DollarCurrency">Withdrawal</a>
                                        </li>
                                        <li>
                                            <a class="btn btn-success" asp-action="Deposit" asp-controller="DollarCurrency">Add money</a>
                                        </li>
                                        <li>
                                            <a class="btn btn-primary" asp-action="History" asp-controller="DollarCurrency">History</a>
                                        </li>
                                        <li>
                                            <a class="btn btn-primary" asp-action="Transfer" asp-controller="DollarCurrency">Transfer</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
            <div class="col-12">
              <div class="card-account info-card pound-card">
                  
                <div class="card-body card-body-account">
                  

                  <div class="d-flex align-items-center">
                    
                    <div class="ps-3">
                      
                      <div class="account-buttons-horizontal">
                        <h5 class="card-title">British Pound Funds</h5>

                         <ul class="list-group list-group-flush list-group-horizontal account-buttons">
                             <li>
                                 <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">£</div>
                             </li>
                             <li>
                                 <h6>
                                     £@pounds
                                 </h6>
                             </li>
                             <li>
                                <a class="btn btn-success" asp-action="Withdrawal" asp-controller="PoundCurrency">Withdrawal</a>
                             </li>
                             <li>
                                <a class="btn btn-success" asp-action="Deposit" asp-controller="PoundCurrency">Add money</a>
                             </li>
                              <li>
                                <a class="btn btn-primary" asp-action="History" asp-controller="PoundCurrency">History</a>
                              </li>
                              <li>
                                <a class="btn btn-primary" asp-action="Transfer" asp-controller="PoundCurrency">Transfer</a>
                              </li>
                         </ul>
                      </div>
                    </div>
                  </div>
                  
                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
}
else if (SignInManager.IsSignedIn(User) && User.IsInRole("Worker"))
{
    <h2>You are in worker mode</h2>
}
else
{
    <h2>WELCOME IN THE BANK APPLICATION!</h2>
}
